@model HESDashboard.Models.Meal
@{
    ViewData["Title"] = "Edit Meal";
}

<h2 class="mb-4 text-accent">✏️ Edit Meal</h2>

<form asp-action="Edit" method="post" class="row g-3 shadow p-4 rounded bg-light">
    @Html.HiddenFor(m => m.Id)

    <div class="col-md-4">
        <label asp-for="Date" class="form-label">Date</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="MealType" class="form-label">Meal</label>
        <input asp-for="MealType" class="form-control" />
        <span asp-validation-for="MealType" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Calories" class="form-label">Calories</label>
        <input asp-for="Calories" class="form-control" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="ProteinGrams" class="form-label">Protein (g)</label>
        <input asp-for="ProteinGrams" class="form-control" />
        <span asp-validation-for="ProteinGrams" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="CarbsGrams" class="form-label">Carbs (g)</label>
        <input asp-for="CarbsGrams" class="form-control" />
        <span asp-validation-for="CarbsGrams" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="FatGrams" class="form-label">Fat (g)</label>
        <input asp-for="FatGrams" class="form-control" />
        <span asp-validation-for="FatGrams" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="SatietyBefore" class="form-label">Satiety Before</label>
        <input asp-for="SatietyBefore" class="form-control" />
        <span asp-validation-for="SatietyBefore" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="SatietyAfter" class="form-label">Satiety After</label>
        <input asp-for="SatietyAfter" class="form-control" />
        <span asp-validation-for="SatietyAfter" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Mood" class="form-label">Mood</label>
        <input asp-for="Mood" class="form-control" />
        <span asp-validation-for="Mood" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PlanRef" class="form-label">Plan Ref</label>
        <input asp-for="PlanRef" class="form-control" />
        <span asp-validation-for="PlanRef" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Substitutions" class="form-label">Substitutions</label>
        <input asp-for="Substitutions" class="form-control" />
        <span asp-validation-for="Substitutions" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="col-12 mt-4">
        <button type="submit" class="btn btn-success">💾 Save Changes</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">↩️ Back</a>
    </div>
</form>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
