@model HESDashboard.Models.HesThreshold

@{
    ViewData["Title"] = "Edit Threshold";
}

<h2 class="mb-4 text-accent">✏️ Edit Threshold Rule</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="MetricKey" class="form-label fw-semibold">📊 Metric Key</label>
                <input asp-for="MetricKey" class="form-control" placeholder="e.g., WeightLbs, HeartRate" />
                <span asp-validation-for="MetricKey" class="text-danger small"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="MinValue" class="form-label fw-semibold">⬇️ Minimum Value</label>
                    <input asp-for="MinValue" class="form-control" type="number" step="0.01" />
                </div>
                <div class="col-md-6">
                    <label asp-for="MaxValue" class="form-label fw-semibold">⬆️ Maximum Value</label>
                    <input asp-for="MaxValue" class="form-control" type="number" step="0.01" />
                </div>
            </div>

            <div class="mt-3">
                <label asp-for="AlertMessage" class="form-label fw-semibold">📢 Alert Message</label>
                <input asp-for="AlertMessage" class="form-control" placeholder="e.g., Heart rate too high!" />
            </div>

            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-success">
                    💾 Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
