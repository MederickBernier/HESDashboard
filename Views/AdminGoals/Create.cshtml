@model HESDashboard.Models.HesGoal

@{
    ViewData["Title"] = "Create Goal";
    var phases = ViewBag.Phases as List<HESDashboard.Models.HesPhase>;
}

<h2 class="mb-3 text-accent">🎯 Create New Goal</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="HesPhaseId" class="form-label">Phase</label>
        <select asp-for="HesPhaseId" class="form-select">
            <option value="">-- Select Phase --</option>
            @foreach (var phase in phases)
            {
                <option value="@phase.Id">@phase.Name</option>
            }
        </select>
        <span asp-validation-for="HesPhaseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">💾 Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
