@model HESDashboard.Models.MedicationEntry
@{
    ViewData["Title"] = "Delete Medication Entry";
}

<h2 class="mb-4 text-danger">🗑️ Confirm Deletion</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this medication log entry?
</div>

<div class="card shadow-sm p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-4 fw-semibold">Medication</dt>
        <dd class="col-sm-8">@Model.Medication?.Name (@Model.Medication?.DefaultDosage)</dd>

        <dt class="col-sm-4 fw-semibold">Time Taken</dt>
        <dd class="col-sm-8">@Model.TimeTaken.ToString("f")</dd>

        <dt class="col-sm-4 fw-semibold">With Food</dt>
        <dd class="col-sm-8">@Model.WithFood</dd>

        <dt class="col-sm-4 fw-semibold">Dosage Override</dt>
        <dd class="col-sm-8">@Model.DosageOverride</dd>

        <dt class="col-sm-4 fw-semibold">Notes</dt>
        <dd class="col-sm-8">@Model.Notes</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
