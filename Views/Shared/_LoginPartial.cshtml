@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-lg-3">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center text-white px-2">
        <span class="navbar-text small">
            <i class="bi bi-person-circle me-1"></i> Hello, @User.Identity?.Name!
        </span>
    </li>
    <li class="nav-item">
        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white px-2">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus-fill me-1"></i> Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right me-1"></i> Login
        </a>
    </li>
}
</ul>
