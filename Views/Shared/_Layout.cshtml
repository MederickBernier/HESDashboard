@* _Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HESDashboard</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: var(--color-accent-dark);">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill me-1"></i> HESDashboard
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Health" asp-action="Index">Health Logs</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Medication" asp-action="Index">Medication</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Metrics" asp-action="Index">Metrics Logs</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Meals" asp-action="Index">Meals</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Training" asp-action="Index">Trainings</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="SleepTracking" asp-action="Index">Sleep Tracking</a></li>
@*                         <li class="nav-item"><a class="nav-link text-white" asp-controller="Forecast" asp-action="Index">Forecasts</a></li> *@
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Health" asp-action="Phases">HES Phases</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Admin Panel</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>

                    <!-- Meal Drift Live Timer -->
                    <div class="d-flex align-items-center">
                        <span class="navbar-text small text-white text-end pe-2">
                            <i class="bi bi-hourglass-split me-1"></i>
                        </span>
                        <div id="meal-drift-container"
                             hx-get="/Meals/MealDrift"
                             hx-trigger="load, every 1s"
                             hx-swap="innerHTML"
                             class="navbar-text small text-white text-end">
                            <span>Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer py-3 bg-light-subtle border-top">
        <div class="container text-muted small d-flex justify-content-between">
            <span>&copy; 2025 - HESDashboard</span>
            <a asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/htmx.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
