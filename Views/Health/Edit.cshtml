@model HESDashboard.Models.DailyMetric
@{
    ViewData["Title"] = "Edit Daily Metric";
}

<h2 class="mb-4 text-accent">✏️ Edit Daily Health Metric</h2>

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="card shadow-sm mb-5">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row g-4">
                <div class="col-md-3">
                    <label asp-for="Date" class="form-label fw-semibold">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <h5 class="mt-3 border-bottom pb-1">📏 Body Composition</h5>
                </div>

                @* Weight, BMI, Fat, Muscle Masses *@
                <div class="col-md-3">
                    <label asp-for="WeightLbs" class="form-label">Weight (lbs)</label>
                    <input asp-for="WeightLbs" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="WeightLbs" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="BMI" class="form-label">BMI</label>
                    <input asp-for="BMI" type="number" step="0.1" class="form-control" />
                    <span asp-validation-for="BMI" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="BodyFatPercent" class="form-label">Body Fat %</label>
                    <input asp-for="BodyFatPercent" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="MuscleMassLbs" class="form-label">Muscle Mass (lbs)</label>
                    <input asp-for="MuscleMassLbs" type="number" step="0.1" class="form-control" />
                </div>

                @* Other Composition *@
                <div class="col-md-3">
                    <label asp-for="SkeletalMuscleMassLbs" class="form-label">Skeletal Muscle (lbs)</label>
                    <input asp-for="SkeletalMuscleMassLbs" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BoneMassLbs" class="form-label">Bone Mass (lbs)</label>
                    <input asp-for="BoneMassLbs" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="LeanBodyMassLbs" class="form-label">Lean Mass (lbs)</label>
                    <input asp-for="LeanBodyMassLbs" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BodyFatMassLbs" class="form-label">Fat Mass (lbs)</label>
                    <input asp-for="BodyFatMassLbs" type="number" step="0.1" class="form-control" />
                </div>

                <div class="col-12">
                    <h5 class="mt-4 border-bottom pb-1">💓 Vitals</h5>
                </div>

                <div class="col-md-3">
                    <label asp-for="HeartRate" class="form-label">Heart Rate (bpm)</label>
                    <input asp-for="HeartRate" type="number" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BMRKcal" class="form-label">BMR (kcal)</label>
                    <input asp-for="BMRKcal" type="number" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="VisceralFat" class="form-label">Visceral Fat</label>
                    <input asp-for="VisceralFat" type="number" class="form-control" />
                </div>

                <div class="col-12">
                    <h5 class="mt-4 border-bottom pb-1">💧 Composition & Age</h5>
                </div>

                <div class="col-md-3">
                    <label asp-for="WaterPercent" class="form-label">Water %</label>
                    <input asp-for="WaterPercent" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="ProteinPercent" class="form-label">Protein %</label>
                    <input asp-for="ProteinPercent" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="SubcutaneousFatPercent" class="form-label">Subcutaneous Fat %</label>
                    <input asp-for="SubcutaneousFatPercent" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BodyAgeYears" class="form-label">Body Age</label>
                    <input asp-for="BodyAgeYears" type="number" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BodyType" class="form-label">Body Type</label>
                    <input asp-for="BodyType" class="form-control" />
                </div>
                <div class="col-12">
                    <h5 class="mt-4 border-bottom pb-1">🧬 Biometric Vitals</h5>
                </div>

                <div class="col-md-3">
                    <label asp-for="SystolicBP" class="form-label">Systolic BP (mmHg)</label>
                    <input asp-for="SystolicBP" type="number" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="DiastolocBP" class="form-label">Diastolic BP (mmHg)</label>
                    <input asp-for="DiastolocBP" type="number" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BloodSugarMgDl" class="form-label">Blood Sugar (mg/dL)</label>
                    <input asp-for="BloodSugarMgDl" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="RestingOxygenPercent" class="form-label">Resting Oxygen %</label>
                    <input asp-for="RestingOxygenPercent" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="BodyTemperatureC" class="form-label">Body Temp (°C)</label>
                    <input asp-for="BodyTemperatureC" type="number" step="0.1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="PulseRate" class="form-label">Pulse Rate (bpm)</label>
                    <input asp-for="PulseRate" type="number" class="form-control" />
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">💾 Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
