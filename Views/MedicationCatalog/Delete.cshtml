@model HESDashboard.Models.MedicationCatalog
@{
    ViewData["Title"] = "Delete Medication";
}

<div class="container">
    <h2 class="mb-4 text-danger fw-bold">🗑️ Confirm Deletion</h2>

    <div class="alert alert-warning border-start border-5 border-danger shadow-sm">
        <p class="mb-2">You are about to permanently delete the medication:</p>
        <h5 class="fw-bold text-danger">🧾 @Model.Name</h5>
        <p class="mb-0 small text-muted">This action cannot be undone.</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-danger px-4">✅ Yes, Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">↩️ Cancel</a>
        </div>
    </form>
</div>
