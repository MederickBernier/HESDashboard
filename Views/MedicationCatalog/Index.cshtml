@model IEnumerable<HESDashboard.Models.MedicationCatalog>
@{
    ViewData["Title"] = "Medication Catalog";
}

<div class="container">
    <h2 class="mb-4 text-accent">💊 Medication Catalog</h2>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a class="btn btn-success" asp-action="Create">➕ Add New Medication</a>
        <span class="text-muted small">Total Medications: @Model.Count()</span>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Default Dosage</th>
                    <th>Notes</th>
                    <th class="text-center" style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var med in Model)
                {
                    <tr>
                        <td class="fw-semibold">@med.Name</td>
                        <td>@med.DefaultDosage</td>
                        <td class="small text-muted">@med.Notes</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@med.Id">✏️ Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@med.Id">🗑️ Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
