@model HESDashboard.Models.MedicationCatalog
@{
    ViewData["Title"] = "Edit Medication";
}

<div class="container">
    <h2 class="mb-4 text-primary fw-bold">✏️ Edit Medication</h2>

    <form asp-action="Edit" method="post" class="card shadow-sm p-4 border-0 bg-light">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="row g-4">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label fw-semibold">Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Metformin" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DefaultDosage" class="form-label fw-semibold">Default Dosage</label>
                <input asp-for="DefaultDosage" class="form-control" placeholder="e.g. 500mg twice daily" />
                <span asp-validation-for="DefaultDosage" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Notes" class="form-label fw-semibold">Additional Notes</label>
                <textarea asp-for="Notes" rows="4" class="form-control" placeholder="Optional notes about usage, timing, or restrictions."></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">💾 Save Changes</button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">↩️ Back to List</a>
        </div>
    </form>
</div>
